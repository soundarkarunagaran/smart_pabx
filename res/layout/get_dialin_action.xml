<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
   >
    
     <TextView
    android:layout_height="wrap_content"
    android:id="@+id/incoming_call_get_dialin_action"
    android:text="006 4601 256"
    android:layout_width="fill_parent"
    android:textStyle="bold"
    android:textSize="26dip"
    android:layout_weight="1"
    android:textColor="@drawable/white"
    android:padding="5dp"
    android:layout_marginTop="80dip"
    android:gravity="center">
   </TextView>
    
    <Button
        android:layout_width="97dip"
        android:layout_height="97dip"
        android:id="@+id/Accept_get_dialin_action"
        android:paddingTop="12sp"
        android:drawablePadding="-5dip"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/incoming_call_get_dialin_action"
        android:text="Accept"> 
    </Button>
    
    <Button
        android:layout_width="90dip"
        android:layout_height="90dip"
       
        android:id="@+id/Reject_get_dialin_action"
        android:paddingTop="12sp"
        android:drawablePadding="-5dip"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/incoming_call_get_dialin_action"
        android:layout_toRightOf="@id/Accept_get_dialin_action"
        android:text="Reject"> 
    </Button>
    
    <Button
        android:layout_width="90dip"
        android:layout_height="90dip"
       
	    android:id="@+id/Silent__get_dialin_action"
        android:paddingTop="12sp"
        android:drawablePadding="-5dip"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/incoming_call_get_dialin_action"
        android:layout_toRightOf="@id/Reject_get_dialin_action"
        android:text="Silent"> 
    </Button>
    
    
